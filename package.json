{
  "name": "sketch-mcp-server",
  "version": "1.0.8",
  "description": "A server for processing Sketch files and generating code using MCP tools.",
  "main": "dist/server.js",
  "bin": {
    "sketch-mcp-server": "./dist/mcp-stdio.js"
  },
  "scripts": {
    "start": "ts-node src/server.ts",
    "start:mcp": "ts-node src/mcp-stdio.ts",
    "build": "tsc && chmod +x dist/mcp-stdio.js",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "restart": "bash scripts/restart.sh",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/sketchConfigAnalyzer.test.ts test/tools.test.ts",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:dry": "release-it --dry-run"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "extract-zip": "^2.0.1",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^9.0.4",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@types/supertest": "^2.0.11",
    "jest": "^27.0.6",
    "release-it": "^17.11.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "sketch",
    "mcp",
    "server",
    "code generation",
    "design-to-code",
    "sketch-analysis"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "xxx"
  },
  "bugs": {
    "url": "xxx"
  },
  "homepage": "xxx",
  "engines": {
    "node": ">=16.0.0"
  }
}
